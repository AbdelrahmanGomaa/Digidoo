@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
var HomePage = Umbraco.Content(1086);
}


<!-- ==================== Start Footer ==================== -->

<footer class="footer-half sub-bg section-padding pb-0">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <div class="cont">
                    <div class="logo">
                        <a href="@HomePage.Url()">
                            <img src="~/img/logo-light.png" alt="">
                        </a>
                    </div>
                    <div class="con-info custom-font">
                        <ul>
                            <li><span>Email : </span>@HomePage.Value("footerMail")</li>
                            <li>
                                <span>Address : </span> @HomePage.Value("footeraddress")
                            </li>
                            <li><span>Phone : </span> @HomePage.Value("footerPhone")</li>
                        </ul>
                    </div>
                    <div class="social-icon">
                        <h6 class="custom-font stit simple-btn">Follow Us</h6>
                        <div class="social">
                            <a target="_blank" href="https://@HomePage.Value("footerLinkFB")" class="icon">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a target="_blank" href="https://@HomePage.Value("footerLinkIG")" class="icon">
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a target="_blank" href="https://@HomePage.Value("footerLinkIN")" class="icon">
                                <i class="fab fa-linkedin"></i>
                            </a>
                            <a target="_blank" href="https://@HomePage.Value("footerLinkTIKTOK")"  class="icon">
                                <i class="fab fa-tiktok"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 offset-lg-2">
                <div class="subscribe mb-50">
                    <h6 class="custom-font stit simple-btn">Newslatter</h6>
                    <p>Sign up for subscribe out newsletter!</p>
                    <form>
                        <div class="form-group custom-font">
                            <input type="email" name="subscribe" placeholder="Your Email">
                            <button class="cursor-pointer">Subscribe</button>
                        </div>
                    </form>
                </div>
