<div class="main-content">
<!-- ==================== Start Intro ==================== -->

<section class="intro-section section-padding pb-0">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-4">
                <div class="htit sm-mb30">
                    <h4>@Model.Value("whoWeAreTitle")</h4>
                </div>
            </div>
            <div class="col-lg-8 offset-lg-1 col-md-8">
                <div class="text">
                    <p class="wow txt" data-splitting>
                        @Model.Value("whoWeAreDesc")
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ==================== End Intro ==================== -->
<!-- ==================== Start Services ==================== -->

<section class="services section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="item md-mb50 wow fadeInUp" data-wow-delay=".3s">
                        <span class="icon @Model.Value("AboutCardIcon1")"></span>
                        <h6>@Model.Value("AboutCardName1")</h6>
                        <p>@Model.Value("AboutCardDesc1")</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="item md-mb50 wow fadeInUp" data-wow-delay=".5s">
                        <span class="icon @Model.Value("AboutCardIcon2")"></span>
                        <h6>@Model.Value("AboutCardName2")</h6>
                        <p>@Model.Value("AboutCardDesc2")</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="item wow fadeInUp" data-wow-delay=".7s">
                        <span class="icon @Model.Value("AboutCardIcon3")"></span>
                        <h6>@Model.Value("AboutCardName3")</h6>
                        <p>@Model.Value("AboutCardDesc3")</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ==================== End Services ==================== -->
<!-- ==================== Start block-sec ==================== -->

<section class="block-sec">
    <div class="background bg-img section-padding pb-0" data-background="img/slid/1.jpg" data-overlay-dark="8">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="vid-area">
                        <div class="vid-icon">
                            <a class="vid" href="https://vimeo.com/127203262">
                                <div class="vid-butn">
                                    <span class="icon">
                                        <i class="fas fa-play"></i>
                                    </span>
                                </div>
                            </a>
                        </div>

                        <div class="cont">
                                <h3 class="wow" data-splitting>@Model.Value("aboutTestimonialText")</h3>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5 offset-lg-1">
                    <div class="testim-box">
                        <div class="head-box">
                                <h6 class="wow fadeIn" data-wow-delay=".5s">@Model.Value("aboutTestimonialsTitle")</h6>
                                <h4 class="wow fadeInLeft" data-wow-delay=".5s">@Model.Value("aboutTestimonialsSubTitle")</h4>
                        </div>
                            @Html.GetBlockListHtml(Model, "aboutTestimonials", "AboutTestimonial")

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ==================== End block-sec ==================== -->
<!-- ==================== Start Skills Circle ==================== -->

