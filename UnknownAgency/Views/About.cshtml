                                    <span class="custom-font">75%</span>
                                </div>
                                <div class="cont">
                                    <span>App</span>
                                    <h6>Development</h6>
                                </div>
                            </div>
                        </div> *@
                    </div>


                </div>
            </div>
        </div>
    </div>
</section>

<!-- ==================== End Skills Circle ==================== -->
<!-- ==================== Start Team ==================== -->

<section class="team section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 valign">
                <div class="full-width">
                    <div class="sec-head custom-font mb-0">
                            <h6>@Model.Value("ourTeamsSubTitle")</h6>
                            <h3>@Model.Value("ourTeamsTitle")</h3>
                    </div>
                    <div class="navs mt-30 wow fadeInUp" data-wow-delay=".3s">
                        <span class="prev cursor-pointer">
                            <i class="fas fa-chevron-left"></i>
                        </span>
                        <span class="next cursor-pointer">
                            <i class="fas fa-chevron-right"></i>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">

                    @Html.GetBlockListHtml(Model, "ourTeams", "OurTeam")

                
            </div>
        </div>
    </div>
</section>

<!-- ==================== End Team ==================== -->
<!-- ==================== Start Minimal-Area ==================== -->

<section class="min-area sub-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="img">
                    @{
                    var AboutUsImage = Model.Value<MediaWithCrops>("aboutImage");
                      }      		
                    <img class="thumparallax-down" src="@AboutUsImage?.MediaUrl()" alt="">
                    
                    
                </div>
            </div>
            <div class="col-lg-6 valign">
                <div class="content">
                    <h4 class="wow custom-font" data-splitting>@Model.Value("aboutTitle")</h4>
                    <p class="wow txt" data-splitting>
                        @Model.Value("aboutDesc")
                    </p>
                    
                    @Html.GetBlockListHtml(Model, "aboutLists", "AboutUs")
                    
                 
                    
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ==================== End Minimal-Area ==================== -->
<!-- ==================== Start clients Brands ==================== -->

<section class="clients section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 valign">
                <div class="sec-head custom-font mb-0">
                    <h6>@Model.Value("aboutClientsTitle")</h6>
                    <h3>@Model.Value("aboutClientsSubTitle")</h3>
                </div>
            </div>
            <div class="col-lg-8">
                <div>
                    
                    @Html.GetBlockListHtml(Model, "aboutClients", "OurClients")

                   
                    
                    
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ==================== End clients Brands ==================== -->
<!-- ==================== Start call-to-action ==================== -->

<section class="call-action section-padding sub-bg bg-img" data-background="~/img/pattern.png">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-lg-9">
                <div class="content sm-mb30">
                    <h6 class="wow" data-splitting>@Model.Value("aboutLetsTalkTitle")</h6>
                    <h2 class="wow custom-font" data-splitting>@Model.Value("aboutLetsTalkSubTitle") <b>@Model.Value("aboutLetsTalkSubTitle2")</b>.</h2>

                </div>
            </div>

            <div class="col-md-4 col-lg-3 valign">
                <a href="@ContactsPage.Url()" class="btn-curve btn-lit"><span>Get In Touch</span></a>
            </div>

        </div>
    </div>
</section>

<!-- ==================== End call-to-action ==================== -->
</div>