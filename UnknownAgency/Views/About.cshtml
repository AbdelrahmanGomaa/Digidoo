    var ContactsPage = Umbraco.Content(1088);
    var HomePage = Model.Root();


}


<header class="works-header fixed-slider hfixd valign">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9 col-md-11 static">
                <div class="capt mt-50">
                    <div class="parlx">
                        <h2 class="custom-font"><span>@Model.Value("aboutHeaderTitle")</span>@Model.Value("aboutHeaderSubTitle")</h2>
                        <p>
                            @Model.Value("aboutHeaderDesc")
                        </p>
                    </div>

                    <div class="bactxt custom-font valign">
                        <span class="full-width">@Model.Value("aboutHeaderBackground")</span>
                    </div>
                </div>

            </div>
        </div>
    </div>
</header>

