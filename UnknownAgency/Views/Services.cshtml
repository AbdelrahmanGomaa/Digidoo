@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Services>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "MasterTemplate.cshtml";
}

<!-- ==================== Start header ==================== -->

<header class="works-header fixed-slider hfixd valign">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9 col-md-11 static">
                <div class="capt mt-50">
                    <div class="parlx">
                        <h2 class="custom-font"><span>@Model.Value("servicesHeaderTitle")</span>@Model.Value("servicesHeaderSubTitle")</h2>
                        <p>
                            @Model.Value("servicesHeaderDesc")
                        </p>
                    </div>

                    <div class="bactxt custom-font valign">
                        <span class="full-width">@Model.Value("servicesHeaderBackground")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- ==================== End header ==================== -->



<div class="main-content">

<!-- ==================== Start blc-sec ==================== -->

<section class="blc-sec section-padding pb-0">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <div class="intro md-mb30">
                    <div class="sub-title">
                            <h6>@Model.Value("servicesTitle")</h6>
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                    <h2 class="extra-title wow" data-splitting>
                            @Model.Value("servicesDesc")
                    </h2>
                </div>
            </div>
            <div class="col-lg-5 valign">
                <div class="full-width">
                    <p class="wow txt" data-splitting>
                            @Model.Value("servicesAbout")
                    </p>
                        <a href="javascript:void(0);" class="simple-btn custom-font mt-20 wow" data-splitting><span>Know More</span></a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ==================== End blc-sec ==================== -->
<!-- ==================== Start Services ==================== -->

<section class="services section-padding">
    <div class="container">




            @Html.GetBlockListHtml(Model, "servicesList", "ServiceCard")





    </div>
</section>

<!-- ==================== End Services ==================== -->
</div>